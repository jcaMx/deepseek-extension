{
    "manifest_version": 3,
    "name": "DeepSeek Sidebar Assistant",
    "version": "1.5",
    "description": "Ask DeepSeek a question via sidebar directly on deepseek.com.",
    "permissions": [
      "scripting", 
      "tabs", 
      "activeTab",
      "sidePanel" 
    ],
    "host_permissions": [
      "https://*.deepseek.com/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "side_panel": {
    "default_path": "sidebar.html"
  }
  }