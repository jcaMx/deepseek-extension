{
    "manifest_version": 3,
    "name": "Deepseek Sidebar Extension",
    "description": "Ask AI questions directly from a popup through Deepseek.",
    "version": "1.0",
    "permissions": [
      "tabs",
      "scripting",
      "activeTab"
    ],
    "host_permissions": [
      "https://chat.deepseek.com/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": [
          "https://chat.deepseek.com/*"
        ],
        "js": ["content.js"]
      }
    ]
  }